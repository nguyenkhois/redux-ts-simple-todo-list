{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        //"outFile": ".dist/bundle.js", // this option conflicts with Webpack Dev Server config
        "sourceMap": true,
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}